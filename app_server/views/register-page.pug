extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
      
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/register')
          - if(error == 'validation')
            .alert.alert-danger(role='alert') Please fill in missing fields.
          div.form-group
            label(for='username') Name:
            input#name.form-control(type='text', placeholder='first and last' name='username')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='password') Password:
            input#pw.form-control(type='password' name='password')
          button.btn.btn-primary(type='submit') Sign up